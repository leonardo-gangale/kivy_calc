<SecondWindow>:
    name: "second"
    # header
    StackLayout:
        orientation: "lr-tb"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba: (0.2, 0.2, 0.2, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ImageButton:
                pos_hint: {"center_y": 0.5}
                size_hint: 0.2, 0.7
                source: "images/white-back-icon-back-arrow-icon-white-text-number-symbol-alphabet-transparent-png-2608792.png"
                background_color: 0, 0, 0, 0
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "right"

            Label:
                text: "settings"
                font_name: "fonts/mustica_pro/MusticaPro-SemiBold.otf"
                font_size: self.height/2

            ImageButton:
                source: "images/logo-removebg.png"
                size_hint: 0.2, 1
                on_release: root.open_website()

        # settings
        AnchorLayout:
            anchor_y: "top"
            StackLayout:
                orientation: "lr-tb"
