#:kivy 1.9.1
#: import NoTransition kivy.uix.screenmanager.NoTransition
WindowManager:
    transition: NoTransition()
    MainWindow:
    ScientificMode:
    SecondWindow:

<MainWindow>:
    name: "first"

    StackLayout:
        id: MainStackLayout
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            size_hint: 1, 0.1

            BoxLayout:
                id: HeaderBoxLayout
                orientation: "horizontal"
                canvas.before:
                    Color:
                        rgba: (0.13, 0.13, 0.13, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                AnchorLayout:
                    anchor_x: "left"
                    ImageButton:
                        size_hint: None, 0.65
                        width: HeaderBoxLayout.height
                        background_color: 0, 0, 0, 0
                        source: "images/change_mode_white.png"
                        pos_hint: {"center_y": 0.5}
                        on_release:
                            app.root.current = "ScientificModeWindow"
                Label:
                    text: "calc"
                    font_size: self.height / 2.3
                    color: eval(root.text_color)
                    font_name: "fonts/mustica_pro/MusticaPro-SemiBold.otf"
                AnchorLayout:
                    anchor_x: "right"
                    ImageButton:
                        size_hint: None, 0.8
                        width: HeaderBoxLayout.height
                        background_color: 0, 0, 0, 0
                        source: "images/menu.png"
                        pos_hint: {"center_y": 0.5}
                        on_press:
                            app.root.current = "second"
                            root.manager.transition =  NoTransition()

        AnchorLayout:
            id: Display
            anchor_x: "center"
            anchor_y: "top"
            size_hint: 1, 0.25

            BoxLayout:
                id: DisplayBoxLayout
                orientation: "horizontal"

                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                ImageToggleButton:
                    id: History_bttn
                    source: "images/history white.png"
                    background_color: 0, 0, 0, 0
                    size_hint: None, None
                    width: DisplayBoxLayout.height/5
                    height: DisplayBoxLayout.height/5
                    on_state:
                        root.show_history(self.state)
                
                BoxLayout:
                    id: Result_display
                    orientation: "vertical"
                    size: root.size
                    Label:
                        id: Result
                        text: str(root.display)
                        font_size: self.height / (1.5 + len(root.display)/(root.width/40))
                        size_hint: 1, 1
                        font_name: "fonts/mustica_pro/MusticaPro-SemiBold.otf"
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                    Label:
                        id: result_preview
                        text: root.result_preview
                        font_size: self.height / (1 + len(root.display)/(root.width/40))
                        size_hint: 1, 0.2
                        font_name: "fonts/mustica_pro/MusticaPro-SemiBold.otf"
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'

        GridLayout:
            cols: 4
            rows: 5
            row_force_default: True
            row_default_height: (self.height-(Display.height+HeaderBoxLayout.height))/5
            Button:
                id: cancel_bttn
                font_size: self.height/3
                on_press: root.cancel_bttn()
                background_color: 0, 0, 0, 0
                col: 1
                row: 1
                text: "C"
            Button:
                id: cancel_bttn
                font_size: self.height/3
                on_press: root.change_symbol()
                background_color: 0, 0, 0, 0
                col: 2
                row: 2
                text: "+/-"
            ImageButton:
                id: backspace_bttn
                source: root.backspace_img
                on_press: root.backspace_bttn()
                col:3
                row:1
            Button:
                id: divide_bttn
                font_size: self.height/3
                on_press: root.divide_bttn()
                background_color: 0, 0, 0, 0
                col: 4
                row: 1
                text: "รท"
                color: (1, 0.2, 0.2, 1)
            Button:
                id: num_bttn
                font_name: "fonts/mustica_pro/MusticaPro-SemiBold.otf"

                font_size: self.height/3
                on_press: root.button_click(eval(self.text))
